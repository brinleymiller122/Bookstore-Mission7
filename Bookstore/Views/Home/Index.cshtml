@{
    ViewData["Title"] = "Home Page";
}

@model BooksViewModel


<!--Print out the book information-->

@foreach (Book b in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4>@b.Title</h4>
        <span class="badge bg-info text-white" style="float:right">
             $@b.Price
        </span>
    </div>
    <ul>
        <li>Author: @b.Author</li>
        <li>Publisher: @b.Publisher</li>
        <li>ISBN: @b.Isbn</li>
        <li>Classification: @b.Classification</li>
        <li>Category: @b.Category</li>
        <li>Page Count: @b.PageCount</li>

    </ul>
 
</div>
} 

<!--dynamic pagination-->

<div page-blah="@Model.PageInfo" page-action="Index" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" page-class-enabled="true" class="btn-group pull-right m-1"></div>