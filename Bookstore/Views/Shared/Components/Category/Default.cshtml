@{
}

@model IEnumerable<string>

<div class="d-grid mb-2">
    <div class="d-grid mb-2">
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-block btn-outline-secondary">Home</a>
    </div>
    @foreach (string c in Model)
    {<div class="d-grid mb-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1"
       class="btn btn-block @(ViewBag.SelectedType == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    </div>
    }
    
    
    
</div>